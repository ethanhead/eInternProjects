@{
    ViewBag.Title = "SignInView";
    Layout = "~/Views/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-6 col-lg-6">
        <h3>Sign In</h3>
        <hr />
        <form method="post" action='@Url.Action("SignIn", "Landlord")' enctype='application/json'>
            <div class="form-group">
                <label for="username">Username :</label>
                <input class="form-control" id="userSignIn" name="Username" type="text" />
            </div>
            <div class="form-group">
                <label for="passSignIn">Password :</label>
                <input class="form-control" id="passSignIn" name="Password" type="password" />
            </div>
            <input type="submit" class="btn btn-default btn-md" value="Sign In" />
        </form>
    </div>
    <div class="col-md-6 col-lg-6">
        <h3>New Landlord Registration</h3>
        <hr />
        <form method="post" action='@Url.Action("RegisterLandlord", "Landlord")' enctype='application/json'>
            <div class="form-group">
                <label for="username">Username :</label>
                <input class="form-control" id="username" name="Username" type="text" />
            </div>
            <div class="form-group">
                <label for="pass">Password :</label>
                <input class="form-control" id="pass" name="Password" type="password" />
            </div>
            <hr />
            <div class="form-group">
                <label for="llname">Name :</label>
                <input class="form-control" id="llname" name="Name" type="text" />
            </div>
            <div class="form-group">
                <label for="company">Company :</label>
                <input class="form-control" id="company" name="Company" type="text" />
            </div>
            <div class="form-group">
                <label for="phone">Phone :</label>
                <input class="form-control" id="phone" name="Phone" type="text" />
            </div>
            <div class="form-group">
                <label for="email">Email :</label>
                <input class="form-control" id="email" name="Email" type="text" />
            </div>
            <input type="submit" class="btn btn-default btn-md" value="Register" />
        </form>
    </div>
</div>

