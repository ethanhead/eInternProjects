<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/jquery.slick/1.5.7/slick.css" />
    <style>
        .container {max-width:80VW}
        #footer {background-color : rgb(64, 64, 64)}
        #navArea {background-color : rgb(64, 64, 64);
                  height:100px;
        }
        .navbar-brand { color : white;}
        .navbar-brand :hover { color : wheat;}
        .navbar-brand :active { color : white;}
    </style>
</head>
<body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href='@Url.Action("MainPage","Main")'>Apartment Finder</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href='@Url.Action("SignIn","SignIn")'>Sign In</a></li>
                </ul>
            </div><!--/.nav-collapse -->
        </div>
    </nav>
    <br />
    <div class="container">
            @RenderBody()
    </div>
    <div id="footer"class="container-fluid">
        <div class="row">

        </div>
    </div>
    <script type="text/javascript" src="//cdn.jsdelivr.net/jquery.slick/1.5.7/slick.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
</body>
</html>
